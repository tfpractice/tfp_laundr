<%= content_tag(:li, class:"#{washer.list_item_class}") do %>
  <%= washer.position_label %>
  <%= washer.washer_link %>
  <%= content_tag(:div, class:"event_links pull-right") do  %>
    <% washer.next_steps.each do |step| %>
      <% if washer.has_form_input(step) %>
        <%= washer.event_form(step) %>
      <% else %>
        <%= link_to washer.event_path(step) ,method: :patch, class: 'btn btn-primary pull-right pull-xs-right' do  %>
          <%=  step %>
          <%= washer.event_icon(step) %>
        <%end %>
      <% end %>
    <%end %>
  <%end %>
<% end %>
