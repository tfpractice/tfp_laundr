<div class="page-header">
  <%= link_to loads_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_load_path(@load), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show load</h1>
</div>

<dl class="dl-horizontal">
  <dt>Weight:</dt>
  <dd><%= @load.weight %></dd>

  <dt>State:</dt>
  <dd><%= @load.state %></dd>

  <dt>User:</dt>
  <dd><%= @load.user %></dd>

  <dt>Machine:</dt>
  <dd><%= @load.machine %></dd>

</dl>
