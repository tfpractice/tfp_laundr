<div class="page-header">
  <%= link_to new_load_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Load
  <% end %>
  <h1>My Loads</h1>
  <div class="userInfo">
  <h2>My info</h2>
    <%# @user %>
    <%# @current_user.attributes %>
    <p> <%= "I currently have #{current_user.laundry}lbs. of laundry" %>
    </p>
    <p>
    <%= "I currently have #{current_user.coins} coins" %>
    </p>
    <span ><%= link_to "Reset Coins to 20", reset_coins_path, method: "patch", class: "btn btn-primary" %>
    </span>
    </div>
</div>
<%#= render partial: "loadLink", collection: current_user.loads.decorate, as: :load %>
<ul class="dirty_loads list-group bg-danger">
  <h1>Dirty Loads</h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_dirty_state.decorate, as: :load %>
</ul>
<ul class="in_washer_loads list-group bg-info">
  <h1> Loads in washers </h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_in_washer_state.decorate, as: :load %>
</ul>
<ul class="wet_load list-group bg-warning">
  <h1>Wet Loads</h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_wet_state.decorate, as: :load %>
</ul>
<ul class="in_dryer_loads list-group bg-info">
  <h1> Loads in Dryers </h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_in_dryer_state.decorate, as: :load %>
</ul>
<ul class="dried_load list-group bg-warning">
  <h1>Dried Loads</h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_dried_state.decorate, as: :load %>
</ul>
<ul class="clean_load list-group bg-success">
  <h1>Clean Loads</h1>
  <%= render partial: "loadLink", collection: current_user.loads.with_clean_state.decorate, as: :load %>
</ul>
